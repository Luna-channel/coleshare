# 数据库连接URL
# PostgreSQL (Neon Database)
DATABASE_URL="postgres://username:password@your-neon-db-host/dbname"
# 或者 SQLite
# DATABASE_URL="sqlite://./data/database.db"

# 存储类型配置 (vercel | r2 | local)
STORAGE_TYPE="vercel"

# Vercel Blob存储令牌
BLOB_READ_WRITE_TOKEN="your-blob-token"

# Vercel Blob存储前缀 (可选，用于多项目共享存储，默认为"oshare")
BLOB_PREFIX="oshare"

# 本地存储配置（当STORAGE_TYPE=local时使用）
# 本地存储目录（默认为 ./public/uploads）
LOCAL_STORAGE_DIR="./public/uploads"
# 本地存储URL前缀（默认为 /uploads）
LOCAL_STORAGE_URL_PREFIX="/uploads"

# Cloudflare R2存储配置（当STORAGE_TYPE=r2时使用）
# R2_ACCOUNT_ID="your_account_id"
# R2_ACCESS_KEY_ID="your_access_key_id"
# R2_SECRET_ACCESS_KEY="your_secret_access_key"
# R2_BUCKET_NAME="your_bucket_name"
# R2_PUBLIC_URL="https://your-bucket.your-domain.com"

# 管理员访问令牌
ADMIN_KEY="your-admin-token"

# 会员访问令牌 (可选，如不设置则内容公开)
MEMBER_KEY="your-member-token"

# Vercel部署URL (可选，用于生成完整URL)
NEXT_PUBLIC_URL="https://your-app.vercel.app"